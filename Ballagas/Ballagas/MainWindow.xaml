<Window x:Class="Ballagas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ballagas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="openAddForm" Content="Megrendelés hozzáadása" HorizontalAlignment="Left" Margin="56,217,0,0" VerticalAlignment="Top" Height="59" Width="160" Click="openAddForm_Click" FontWeight="Bold"/>
        <Button x:Name="openEditForm" Content="Megrendelés szerkesztése" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="59" Width="192" Click="openEditForm_Click" FontWeight="Bold"/>
        <Button x:Name="openDeleteForm" Content="Megrendelés törlése" HorizontalAlignment="Left" Margin="575,217,0,0" VerticalAlignment="Top" Height="59" Width="160" Click="openDeleteForm_Click" FontWeight="Bold"/>
        <Label Content="Profi Ballagási Meghívó Készítő Cég" HorizontalAlignment="Left" Margin="191,46,0,0" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="22"/>

    </Grid>
</Window>
